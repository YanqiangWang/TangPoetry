<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>PaginationServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.PaginationServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PaginationServlet</servlet-name>
		<url-pattern>/PaginationServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.InitServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>InitServlet</servlet-name>
		<url-pattern>/InitServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PoetListServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.PoetListServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PoetListServlet</servlet-name>
		<url-pattern>/PoetListServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PoetryListServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.PoetryListServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PoetryListServlet</servlet-name>
		<url-pattern>/PoetryListServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SearchServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.SearchServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SearchServlet</servlet-name>
		<url-pattern>/SearchServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PoetPageServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.PoetPageServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PoetPageServlet</servlet-name>
		<url-pattern>/PoetPageServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>PoetryPageServlet</servlet-name>
		<servlet-class>
			com.jkxy.poetry.controller.PoetryPageServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>PoetryPageServlet</servlet-name>
		<url-pattern>/PoetryPageServlet</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>
			com.jkxy.poetry.filter.EncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>InitServlet</welcome-file>
	</welcome-file-list>
</web-app>
